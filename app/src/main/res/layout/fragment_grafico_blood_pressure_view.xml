<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.vistaGraficoBloodPressure.GraficoBloodPressureView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.echo.holographlibrary.LineGraph
            android:id="@+id/line_graph1"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:padding="16dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_presionSanguinea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_BloodPressure" />

        <com.echo.holographlibrary.LineGraph
            android:id="@+id/line_graph2"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_presionSanguinea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_ritmoCardiaco"
            app:layout_constraintBottom_toTopOf="@+id/line_graph2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_graph1" />

        <TextView
            android:id="@+id/tv_BloodPressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_PresionSanguinea"
            app:layout_constraintBottom_toTopOf="@+id/line_graph1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>